package site.metacoding.chatting.v4.client;

import java.awt.Panel;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JTextArea;

import site.metacoding.chatting.v4.frame.BorderLayout;

public class ChatClientProgram extends JFrame {

	JPanel northPanel, southPanel;
	JTextArea chatList;

	public ChatClientProgram() {
		setTitle("MyChat1.0");
		setSize(250, 300);
		setLocationRelativeTo(null);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		northPanel = new JPanel();
		southPanel = new JPanel();
		
		add(new JButton("북쪽"), BorderLayout.NORTH);
		add(new JButton("센터"), BorderLayout.CENTER);
		add(new JButton("남쪽"), BorderLayout.SOUTH);
		setVisible(true);
	}

	private void init() {
		
	}

	public static void main(String[] args) {
		new ChatClientProgram();
	}

}
